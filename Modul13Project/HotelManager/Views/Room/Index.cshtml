@model IEnumerable<HotelManager.Models.Room>

@{
    ViewData["Title"] = "Index";
}
@if(ViewBag.role=="Admin")
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table id="roomTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceBedAdult)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceBedChild)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceBedAdult)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriceBedChild)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
                @if(ViewBag.role=="Admin")
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
                @if(ViewBag.role=="User")
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    </td>
                }
               
            </tr>
        }
    </tbody>
</table>

